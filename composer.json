{
    "name": "psw-group/api-v1",
    "description": "Client for the API of PSW GROUP",
    "keywords": [
        "PSW GROUP",
        "API",
        "SDK"
    ],
    "homepage": "https://github.com/psw-group/api-v1",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "binsoul/net-hal-client": "dev-master",
        "php-http/discovery": "^1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "friendsofphp/php-cs-fixer": "^2",
        "phpstan/phpstan": "^0.12",
        "http-interop/http-factory-guzzle": "^1",
        "php-http/guzzle6-adapter": "^2",
        "php-http/mock-client": "^1"
    },
    "autoload": {
        "psr-4": {
            "PswGroup\\Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PswGroup\\Test\\Api\\": "tests"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "fix-style": [
            "php-cs-fixer fix src --rules=@Symfony,-yoda_style",
            "php-cs-fixer fix tests --rules=@Symfony,-yoda_style"
        ],
        "analyze": "phpstan analyse -l 7 src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
